    'title' => 'Saferpay SCD Response',
    'page callback' => 'commerce_saferpay_business_scd_handle_response',
    'page arguments' => array(3),
    'access callback' => 'commerce_saferpay_business_redirect_access',
    'access arguments' => array(3, 4),
